<assembly>
	<id>bin</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>

	<moduleSets>
		<moduleSet>
		  <!-- Enable access to all projects in the current multimodule build! -->
    	  <useAllReactorProjects>true</useAllReactorProjects> 

    	  <!-- Now, select which projects to include in this module-set. -->
	      <includes>
	      	<include>edu.usc.goffish:gofs-api</include>
	        <include>edu.usc.goffish:gofs-core</include>
	      </includes> 
	    
	      <binaries>
	      	<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
	        <outputDirectory>gofs-${project.version}/bin</outputDirectory>
	        <unpack>false</unpack>

	        <dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>gofs-${project.version}/bin/lib</outputDirectory>
			<excludes>
				<exclude>junit:junit</exclude>
				<exclude>edu.usc.goffish:gofs-api</exclude>
			</excludes>
		</dependencySet>
		</dependencySets>
	      </binaries>

	      
	
	     
		</moduleSet>
	</moduleSets>	
	<fileSets>
	          <fileSet>
	            <directory>scripts</directory>
	            <outputDirectory>gofs-${project.version}/bin</outputDirectory>
	            <includes>
					<include>**</include>
				</includes>
				<excludes>
					<exclude>gofs.config</exclude>
				</excludes>
	        </fileSet>
	        </fileSets>
	  <files>
				<file>
					<source>scripts/gofs.config</source>
					<outputDirectory>gofs-${project.version}/conf</outputDirectory>
				</file>
			</files>

</assembly>